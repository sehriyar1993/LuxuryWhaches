@using LuxuryWhaches.EntityLayer.Concreate;
@model Category

@{
    ViewData["Title"] = "UpdateCateqory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
	<div class="main-page">
		<h2 class="title1">Yenilə</h2>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<form method="post">
				<input type="hidden" asp-for="CategoryID" value="@Model.CategoryID" />
				<input type="hidden" asp-for="CategoryStatus" value="@Model.CategoryStatus" />

				<br />
				@Html.Label("Kateqoriyanın Adı")
				<input type="text" asp-for="CategoryName" class="form-control" />
				<br />
				<input type="submit" class="btn btn-success btn-flat btn-pri" value="Təsdiqlə" />

			</form>
		</div>
	</div>
</div>
