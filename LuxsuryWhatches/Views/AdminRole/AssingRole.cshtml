@model List<AssingRoleViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
	<div class="main-page">
		<h2 class="title1">Rol Ver</h2>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
		
			<form method="post">
				@for (int i = 0; i < Model.Count; i++)
				{
					<input type="hidden" asp-for="@Model[i].RoleId">
					<input type="hidden" asp-for="@Model[i].RoleName">
					<input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input">
					<br />
					<label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
					<br />

				}
				<button class="btn btn-danger btn-flat btn-pri" type="submit">Təsdiqlə</button>
			</form>

		</div>
	</div>
</div>

