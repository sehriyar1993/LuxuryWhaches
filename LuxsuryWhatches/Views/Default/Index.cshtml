@using LuxuryWhaches.EntityLayer.Concreate;
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<div class="bnr" id="home">
	<div id="top" class="callbacks_container">
		<ul class="rslides" id="slider4">
			<li>
				<img src="~/web/images/bnr-1.jpg" alt="" />
			</li>
			<li>
				<img src="~/web/images/bnr-2.jpg" alt="" />
			</li>
			<li>
				<img src="~/web/images/bnr-3.jpg" alt="" />
			</li>
		</ul>
	</div>
	<div class="clearfix"> </div>
</div>
<!--banner-ends-->
<!--Slider-Starts-Here-->
<script src="~/web/js/responsiveslides.min.js"></script>
<script>
	// You can also use "$(window).load(function() {"
	$(function () {
		// Slideshow 4
		$("#slider4").responsiveSlides({
			auto: true,
			pager: true,
			nav: true,
			speed: 500,
			namespace: "callbacks",
			before: function () {
				$('.events').append("<li>before event fired.</li>");
			},
			after: function () {
				$('.events').append("<li>after event fired.</li>");
			}
		});
	});
</script>
<!--End-slider-script-->
<!--about-starts-->
<div class="about">
	<div class="container">
		<div class="about-top grid-1">
			@foreach(var x in Model.OrderByDescending(x=>x.ProductID).Take(3))
			{
				<div class="col-md-4 about-left">
					<figure class="effect-bubba">
						<img class="img-responsive" src="@x.ProductImage1" alt="" style="width:350px; height:280px"/>
						<figcaption>
							<h2>@x.ProductName</h2>
							<p>@x.ProductAbout</p>
						</figcaption>
					</figure>
				</div>
			}
			<div class="clearfix"></div>
		</div>
	</div>
</div>
<!--about-end-->
<!--product-starts-->
<div class="product">
	<div class="container">
		<div class="product-top">
			<div class="product-one">
					@foreach(var y in Model.Take(4))
			{
				<div class="col-md-3 product-left">
					<div class="product-main simpleCart_shelfItem">
							<a href="/Default/ProductDetails/@y.ProductID" class="mask"><img class="img-responsive zoom-img" src="@y.ProductImage1" alt="" style="width:280px; height:280px" /></a>
						<div class="product-bottom">
							<h3>@y.ProductName</h3>
							<p>@y.ProductModel</p>
								@if (User.Identity.IsAuthenticated)
								{
									<h4><form method="post" action="/Order/Index/" class="item_add" >
											<input type="hidden" name="AppUserId" value="@ViewBag.UserId">
											<input type="hidden" name="ProductGender" value="@y.ProductGender">
											<input type="hidden" name="ProductGender" value="@y.ProductGender">
											<input type="hidden" name="ProductName" value="@y.ProductName">
											<input type="hidden" name="DiscountedPrice" value="@y.DiscountedPrice">
											<input type="hidden" name="ProductImage1" value="@y.ProductImage1">
											<input type="hidden" name="ProductImage1" value="@y.ProductImage1">
											<input type="hidden" name="ProductID" value="@y.ProductID">
											<div class="submit-btn">
												<input type="submit"  value="Səbətə Əlavə Et">
											</div>
										<i></i></form>
										<span class=" item_price">@y.CellPrice AZN</span>
									</h4>
								}
								else
								{
									<h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@y.CellPrice AZN</span></h4>
								}
						</div>
						<div class="srch">
							<span>@y.DiscountedPrice AZN</span>
						</div>
					</div>
				</div>
		    }
				<div class="clearfix"></div>
			</div>
			<div class="product-one">
			@foreach(var z in Model.OrderByDescending(x=>x.ProductID).Take(4))
			{
				<div class="col-md-3 product-left">
					<div class="product-main simpleCart_shelfItem">
							<a href="/Default/ProductDetails/@z.ProductID" class="mask"><img class="img-responsive zoom-img" src="@z.ProductImage1" alt="" style="width:280px; height:280px" /></a>
						<div class="product-bottom">
								<h3>@z.ProductName</h3>
								<p>@z.ProductModel</p>
								@if(User.Identity.IsAuthenticated)
								{
									<h4>
										<form method="post" action="/Order/Index/" class="item_add">
											<input type="hidden" name="AppUserId" value="@ViewBag.UserId">
											<input type="hidden" name="ProductGender" value="@z.ProductGender">
											<input type="hidden" name="ProductGender" value="@z.ProductGender">
											<input type="hidden" name="ProductName" value="@z.ProductName">
											<input type="hidden" name="DiscountedPrice" value="@z.DiscountedPrice">
											<input type="hidden" name="ProductImage1" value="@z.ProductImage1">
											<input type="hidden" name="ProductImage1" value="@z.ProductImage1">
											<input type="hidden" name="ProductID" value="@z.ProductID">
											<div class="submit-btn">
												<input type="submit" value="Səbətə Əlavə Et">
											</div>											<i></i>
										</form>
										<span class=" item_price">@z.CellPrice AZN</span>
									</h4>
								}
								else
								{
									<h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@z.CellPrice AZN</span></h4>

								}
							</div>
						<div class="srch">
								<span>@z.DiscountedPrice AZN</span>
					    </div>
					</div>
				</div>
		    }
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
</div>

