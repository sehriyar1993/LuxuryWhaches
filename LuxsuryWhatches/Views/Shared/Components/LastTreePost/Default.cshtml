@using LuxuryWhaches.EntityLayer.Concreate;
@model List<Product>
<div class="product-one">
	@foreach (var x in Model.OrderByDescending(x => x.ProductID).Take(3))
	{
		<div class="col-md-4 product-left p-left">
			<div class="product-main simpleCart_shelfItem">
				<a href="/Default/ProductDetails/@x.ProductID" class="mask"><img class="img-responsive zoom-img" src="@x.ProductImage1" alt="" /></a>
				<div class="product-bottom">
					<h3>@x.ProductName</h3>
					<p>@x.ProductGender</p>
					@if (User.Identity.IsAuthenticated)
					{
						<h4>
							<form method="post" action="/Order/Index/" class="item_add">
								<input type="hidden" name="AppUserId" value="@ViewBag.UserId">
								<input type="hidden" name="ProductGender" value="@x.ProductGender">
								<input type="hidden" name="ProductGender" value="@x.ProductGender">
								<input type="hidden" name="ProductName" value="@x.ProductName">
								<input type="hidden" name="DiscountedPrice" value="@x.DiscountedPrice">
								<input type="hidden" name="ProductImage1" value="@x.ProductImage1">
								<input type="hidden" name="ProductImage1" value="@x.ProductImage1">
								<input type="hidden" name="ProductID" value="@x.ProductID">
								<input type="submit" class="add-cart item_add" value="Səbətə Əlavə Et">
								<i></i>
							</form>
							<span class=" item_price">@x.CellPrice AZN</span>
						</h4>
					}
					else
					{
						<h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">@x.CellPrice AZN</span></h4>

					}
				</div>
				<div class="srch">
					<span>@x.DiscountedPrice AZN</span>
				</div>
			</div>
		</div>

	}

	<div class="clearfix"></div>
</div>