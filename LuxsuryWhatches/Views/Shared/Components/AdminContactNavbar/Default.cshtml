@using LuxuryWhaches.EntityLayer.Concreate;
@model List<Contact>

<li class="dropdown head-dpdn">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-envelope"></i><span class="badge">4</span></a>
	<ul class="dropdown-menu">
		@foreach(var x in Model.OrderByDescending(x => x.ContactId).Take(5))
		{
			<li>
				<a href="#">
					<div class="user_img"><img src="images/1.jpg" alt=""></div>
					<div class="notification_desc">
						<p>@x.ContactSubject</p>
						<p><span>@(((DateTime)x.ContactDate).ToString("dd-MMM-yyyy"))</span></p>
					</div>
					<div class="clearfix"></div>
				</a>
			</li>

		}
	
		<li>
			<div class="notification_bottom">
				<a href="/AdminMail/Contact">Bütün Müraciətlərə Bax</a>
			</div>
		</li>
	</ul>
</li>
