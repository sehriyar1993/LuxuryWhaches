@using LuxuryWhaches.EntityLayer.Concreate;
@using X.PagedList;
@using X.PagedList.Mvc.Core.Common;
@using X.PagedList.Mvc.Core;
@model IPagedList<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div id="page-wrapper">
	<div class="main-page">
		<h2 class="title1">Məhsullarımız</h2>
		<div class="blank-page widget-shadow scroll" id="style-2 div1">
			<style>
				img {
					border-radius: 50%;
				}
			</style>
			<table class="table table-bordered">
				<tr>
					<th>#</th>
					<th>Şəkli</th>
					<th>Adı</th>
					<th>Cinsiyət</th>
					<th>Alış Qiyməti</th>
					<th>Satış Qiyməti</th>
					<th>Endirimli Qiymət</th>
					<th>Yenilə</th>
					<th>Sil</th>
					<th>Ətraflı</th>
				</tr>

				@foreach (var x in Model)
				{
					<tr>
						<td>@x.ProductID</td>
						<td><img src="@x.ProductImage1" style="width:64px;height:64px;" /></td>
						<td>@x.ProductName</td>
						<td>@x.ProductGender</td>
						<td>@x.ProductPrice AZN</td>
						<td>@x.CellPrice AZN</td>
						<td>@x.DiscountedPrice AZN</td>
						<td><a href="" class="btn btn-primary btn-flat btn-pri">Yenilə</a></td>


						<td><a href="" class="btn btn-warning btn-flat btn-pri">Sil</a></td>
						<td><a href="" class="btn btn-success btn-flat btn-pri">Ətraflı</a></td>
					</tr>
				}

			</table>

		</div>
	</div>
</div>


	


@Html.PagedListPager((IPagedList)Model, page => Url.Action("Product", new { page }),
		new PagedListRenderOptions
		{
		LinkToFirstPageFormat="<<İlk",
		LinkToLastPageFormat="Son>>",
		LinkToNextPageFormat="sonraki>",
		LinkToPreviousPageFormat="<əvvəli",
		ContainerDivClasses=new[] {"navigation"},
		LiElementClasses= new[] {"page-item"},
		PageClasses=new[] {"page-link"},
		ActiveLiElementClass="active"
		})