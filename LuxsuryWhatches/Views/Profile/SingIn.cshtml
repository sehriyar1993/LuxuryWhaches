@model LoginViewModel
@{
    ViewData["Title"] = "SingIn";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="account">
	<div class="container">
		<div class="account-top heading">
			<h2>Giriş Edin</h2>
		</div>
		<div class="account-main">
			<form method="post" class="col-md-6 account-left">
				<h3>İstifadəçi Adı İlə Giriş</h3>
				<div class="account-bottom">
					<input placeholder="İstifadəçi Adınız" type="text" tabindex="3" asp-for="username" required>
					<input placeholder="Şifrəniz" type="password" asp-for="password" tabindex="4" required>
					<div class="address">
						<a class="forgot" href="/Profile/ForgetPassword/">Sifrəmi Unutdum?</a>
						<input type="submit" value="Giriş Et">
					</div>
				</div>
			</form>
			<div class="col-md-6 account-right account-left">
				<h3>Yeni İstifadəçisənmi? Bir Hesabın Hələdə Yoxdur?</h3>
				<p>Siz Qeydiyyatdan Keçməklə Endirimlərdən Yararlana Bilərsiniz. Ele İndi Qeydiyyatdan Keçin</p>
				<a href="/Profile/SingUp/">Hesab Yarat</a>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>


